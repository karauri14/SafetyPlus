<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".Drive">

    <TextView
        android:id="@+id/at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attention"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:drawableStart="@drawable/attention"
        android:drawablePadding="5dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/signLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            android:layout_weight="0"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/stop" />

            <ImageView
                android:id="@+id/slow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/slow" />

            <ImageView
                android:id="@+id/overtaking"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/overtaking" />

        </LinearLayout>

        <ImageView
            android:id="@+id/turnLeft"
            android:background="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_weight="0"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/turn_left" />

        <ImageView
            android:id="@+id/turnRight"
            android:background="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_weight="0"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/turn_right" />

    </LinearLayout>

    <ImageView
        android:id="@+id/OilNozzle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/regular" />

</android.support.constraint.ConstraintLayout>